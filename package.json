{
  "name": "@weiward/contracts",
  "version": "0.3.0",
  "description": "Smart contracts for the weiWard platform.",
  "author": "weiWard LLC",
  "license": "(Apache-2.0 OR MIT)",
  "private": true,
  "scripts": {
    "compile": "run-s compile:noTypes gen-types",
    "compile:noTypes": "hardhat compile",
    "deploy": "hardhat deploy",
    "export": "hardhat export --export build/abi.json",
    "export:all": "hardhat export --export-all build/abi.json",
    "gen-types": "run-p gen-types:*",
    "gen-types:ethers": "typechain --target=ethers-v5 --outDir=build/types/ethers-v5 \"build/artifacts/contracts/**/+([a-zA-Z0-9]).json\"",
    "gen-types:web3": "typechain --target=web3-v1 --outDir=build/types/web3-v1 \"build/artifacts/contracts/**/+([a-zA-Z0-9]).json\"",
    "lint": "run-p lint:*",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint \"*/**/*.{js,jsx,ts,tsx}\"",
    "lint:sol": "solhint contracts/**/*.sol",
    "pre-commit": "tsc --noEmit && lint-staged",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "test": "hardhat test",
    "verify": "hardhat etherscan-verify --solc-input",
		"verify:proxies": "hardhat run \"scripts/verify-proxies.ts\"",
    "clean": "shx rm -rf build",
    "clean:dev": "rm -rf build node_modules"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.sol": [
      "solhint"
    ]
  },
  "devDependencies": {
    "@ethereum-waffle/compiler": "^3.3.1",
    "@ethersproject/abi": "^5.1.0",
    "@ethersproject/bignumber": "^5.1.0",
    "@ethersproject/bytes": "^5.1.0",
    "@ethersproject/constants": "^5.1.0",
    "@ethersproject/contracts": "^5.1.0",
    "@ethersproject/providers": "^5.1.0",
    "@ethersproject/units": "^5.1.0",
    "@ethersproject/wallet": "^5.1.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "3.4.1-solc-0.7-2",
    "@openzeppelin/contracts-upgradeable": "3.4.1-solc-0.7-2",
    "@sinonjs/fake-timers": "^7.0.5",
    "@sushiswap/core": "^1.4.2",
    "@typechain/ethers-v5": "^6.0.5",
    "@typechain/web3-v1": "^2.2.0",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@types/sinonjs__fake-timers": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@uniswap/lib": "^4.0.1-alpha",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^0.21.1",
    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.0",
    "hardhat": "^2.2.0",
    "hardhat-abi-exporter": "^2.2.0",
    "hardhat-deploy": "^0.7.4",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.9",
    "shx": "^0.3.3",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "truffle-flattener": "^1.5.0",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.4"
  }
}
